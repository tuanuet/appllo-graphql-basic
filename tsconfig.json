{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "module": "commonjs",
        "outDir": "dist",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "src/types/*"
            ]
        },
        "lib": [
            "esnext.asynciterable",
            "es2015", 
            "dom"
        ],

    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        ".vscode"
    ]
}